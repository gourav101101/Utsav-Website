# Example backend .env for Utsav backend
# Copy this file to .env and update values before running the server

# MongoDB connection string
MONGODB_URI=mongodb+srv://user:pass@cluster.example.mongodb.net/utsav?retryWrites=true&w=majority

# Port to run the backend
PORT=4000

# API key used to authorize admin actions (create/update/delete)
# Recommended: set ADMIN_API_KEY here. If you accidentally set VITE_ADMIN_KEY instead, the backend
# now accepts VITE_ADMIN_KEY as a fallback. For security, do NOT commit real secrets.
ADMIN_API_KEY=your_backend_admin_key_here

# Optional: if you're running the frontend and want to share the same admin key in env
VITE_ADMIN_KEY=
